<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <solid android:color="@color/greenColor" />
            <stroke android:width="2dip" android:color="@color/greenColor" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <solid android:color="@color/greenColorLight" />
            <stroke android:width="2dip" android:color="@color/greenColorLight" />

        </shape>
    </item>
</selector>