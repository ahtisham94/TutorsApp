<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        // You can change thickness here.
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:paddingStart">@dimen/_1sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="button_style" parent="Divider">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_13sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rectangle_shape</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/graniteGreen</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="spinner_rl_style">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="android:background">@drawable/rectangle_shape</item>
    </style>


    <style name="text_view_style" >
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:maxLines">1</item>

        <item name="android:background">@drawable/rectangle_shape</item>
    </style>

    <style name="edittext_view_style" >
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@drawable/rectangle_shape</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/whiteColor</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>



    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/whiteColor</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>
