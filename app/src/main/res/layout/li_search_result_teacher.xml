<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/circularImageCv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/bgCircularImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="25dp"
        card_view:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/buildingIv"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:clickable="true"
            android:contentDescription="@string/icon"
            android:elevation="5dp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/men"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Adnan Shokat"
        android:textColor="@color/graniteGreen"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toEndOf="@+id/circularImageCv"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="1"
        android:stepSize="0.1"
        app:layout_constraintStart_toEndOf="@+id/circularImageCv"
        app:layout_constraintTop_toBottomOf="@+id/nameTv" />


    <TextView
        android:id="@+id/distanceLableTv"
        android:layout_width="@dimen/_57sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:text="@string/distance"
        android:textColor="@color/graniteGreen"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circularImageCv" />

    <TextView
        android:id="@+id/distanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="5KM"
        android:textColor="@color/textColorDistanceSearch"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/distanceLableTv"
        app:layout_constraintStart_toEndOf="@+id/distanceLableTv"
        app:layout_constraintTop_toTopOf="@+id/distanceLableTv" />

    <TextView
        android:id="@+id/qualificationLabelTv"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:text="@string/fee"
        android:textColor="@color/graniteGreen"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/feeTV"
        app:layout_constraintEnd_toStartOf="@+id/feeTV"
        app:layout_constraintTop_toTopOf="@+id/feeTV" />

    <TextView
        android:id="@+id/feeTV"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:text="25,000 PKR"
        android:textColor="@color/textColorFeeQualificationSearch"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circularImageCv" />

    <TextView
        android:id="@+id/qualificationLableTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:text="@string/qualification"
        android:textColor="@color/graniteGreen"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceLableTv" />

    <TextView
        android:id="@+id/qualificationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="ACCS"
        android:textColor="@color/textColorDistanceSearch"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/qualificationLableTv"
        app:layout_constraintStart_toEndOf="@+id/qualificationLableTv"
        app:layout_constraintTop_toTopOf="@+id/qualificationLableTv" />

    <TextView
        android:id="@+id/addressLabelTv"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:text="@string/address"
        android:textColor="@color/graniteGreen"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/addressTV"
        app:layout_constraintEnd_toStartOf="@+id/addressTV"
        app:layout_constraintTop_toTopOf="@+id/addressTV" />

    <TextView
        android:id="@+id/addressTV"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:text="I-8 Markaz"
        android:textColor="@color/textColorFeeQualificationSearch"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceLableTv" />

    <View
        android:id="@+id/dividerdown"
        style="@style/Divider.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>