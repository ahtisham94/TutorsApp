<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/dividerUp"
        style="@style/Divider.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/delEducationImg"
        android:layout_width="wrap_content"
        android:text="X"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerUp"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:id="@+id/itemLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/delEducationImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp">


            <TextView
                android:id="@+id/text1Tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="@string/degree_name"
                android:textColor="@color/graniteGreen"
                android:textSize="@dimen/_10ssp"
                 />


            <TextView
                android:id="@+id/degreeNameTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:text="Islamabad"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/_25sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="@string/institute_school_college"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/graniteGreen"
                android:textSize="@dimen/_10ssp"
           />

            <TextView
                android:id="@+id/instituteTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:text="20,000 PKR"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp">

            <TextView
                android:id="@+id/text3Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/university_board_city"
                android:textColor="@color/graniteGreen"
                android:textSize="@dimen/_10ssp"
                 />

            <TextView
                android:id="@+id/universityTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Home Based"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/grade"
                android:textColor="@color/graniteGreen"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/gradeTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="20,000 PKR"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
               />
        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/dividerBottom"
        style="@style/Divider.Horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemLayout"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>